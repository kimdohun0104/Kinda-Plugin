<idea-plugin>
    <id>com.github.kimdohun0104.kindaplugin</id>
    <name>Kinda</name>
    <vendor>kimdohun0104</vendor>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="dohun.kim.kinda_plugin.action.CreateKindaTemplateAction"
                class="dohun.kim.kinda_plugin.action.CreateKindaTemplateAction"
                text="New Kinda Template"
                description="Create kinda state and viewModel"
                icon="Icons.KindaLogo">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <defaultLiveTemplates file="/liveTemplates/Kinda.xml" />
    </extensions>
</idea-plugin>
